{% extends "base.html.twig" %}


{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="text-center my-4">
    {% if editMode %}
    Modifier l'article
    {% else %}
        Ajouter l'article
    {% endif %}
    </h1>
    <div class="container">    
    {{ form_start(form, {
        attr: {
            novalidate: 'novalidate'
        }
    })}}

    {{ form_row(form.title,{
        label: 'titre'
    })}}

    {{ form_row(form.category,{
        label: 'Categorie',
    })}}

    {{ form_row(form.content,{
        label: 'Contenu', 
        attr: {
            placeholder: "contenue de l'article"
        }
    })}}

    {{ form_row(form.image)}}

    <button type="submit" class="btn btn-secondary">Enregistr√©</button>

    {{ form_end(form)}}
    </div>

{% endblock %}